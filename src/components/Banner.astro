---
const heading = "The Storyteller"
const subheading = "Rise of the Machines"
const gradient = "bg-gradient-to-r from-stone-900 to-stone-600 bg-clip-text text-transparent"
---

<div class="flex items-center justify-center h-[600px] banner">
    <div class="height-[100px]">
        <h1 class=`text-[120px] font-bold ${gradient}`>{heading}</h1>
        <p class="text-4xl text-stone-700" >{subheading}</p>
    </div>
</div>
